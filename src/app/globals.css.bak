@tailwind base;
@tailwind components;
@tailwind utilities;

body {
  font-family: 'Inter', sans-serif;
}

@layer base {
  :root {
    --background: 207 88% 94%;
    --foreground: 235 40% 20%;
    --card: 207 88% 97%;
    --card-foreground: 235 40% 20%;
    --popover: 207 88% 97%;
    --popover-foreground: 235 40% 20%;
    --primary: 235 62% 30%;
    --primary-foreground: 210 40% 98%;
    --secondary: 207 80% 90%;
    --secondary-foreground: 235 62% 30%;
    --muted: 207 80% 90%;
    --muted-foreground: 235 25% 45%;
    --accent: 291 64% 42%;
    --accent-foreground: 0 0% 98%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 0 0% 98%;
    --border: 207 50% 85%;
    --input: 207 60% 90%;
    --ring: 291 64% 42%;
    --chart-1: 12 76% 61%;
    --chart-2: 173 58% 39%;
    --chart-3: 197 37% 24%;
    --chart-4: 43 74% 66%;
    --chart-5: 27 87% 67%;
    --radius: 0.5rem;
    --sidebar-background: 235 40% 20%;
    --sidebar-foreground: 210 40% 90%;
    --sidebar-primary: 291 64% 52%;
    --sidebar-primary-foreground: 0 0% 98%;
    --sidebar-accent: 235 30% 30%;
    --sidebar-accent-foreground: 0 0% 98%;
    --sidebar-border: 235 30% 25%;
    --sidebar-ring: 291 64% 52%;
  }
  .dark {
    --background: 235 30% 10%;
    --foreground: 210 40% 98%;
    --card: 235 30% 12%;
    --card-foreground: 210 40% 98%;
    --popover: 235 30% 12%;
    --popover-foreground: 210 40% 98%;
    --primary: 210 40% 98%;
    --primary-foreground: 235 62% 30%;
    --secondary: 235 30% 18%;
    --secondary-foreground: 210 40% 98%;
    --muted: 235 30% 18%;
    --muted-foreground: 210 40% 60%;
    --accent: 291 64% 52%;
    --accent-foreground: 0 0% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 0 0% 98%;
    --border: 235 30% 18%;
    --input: 235 30% 18%;
    --ring: 291 64% 52%;
    --chart-1: 220 70% 50%;
    --chart-2: 160 60% 45%;
    --chart-3: 30 80% 55%;
    --chart-4: 280 65% 60%;
    --chart-5: 340 75% 55%;
    --sidebar-background: 235 30% 10%;
    --sidebar-foreground: 210 40% 98%;
    --sidebar-primary: 291 64% 52%;
    --sidebar-primary-foreground: 0 0% 98%;
    --sidebar-accent: 235 30% 18%;
    --sidebar-accent-foreground: 210 40% 98%;
    --sidebar-border: 235 30% 18%;
    --sidebar-ring: 291 64% 52%;
  }
}

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
  }
}
